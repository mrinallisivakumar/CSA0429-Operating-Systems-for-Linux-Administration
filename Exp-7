#include <stdio.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd[2];
    char write_msg[50], read_msg[50];

    pipe(fd);

    printf("Enter message to send: ");
    scanf(" %[^\n]", write_msg);

    if(fork() == 0) {
        read(fd[0], read_msg, sizeof(read_msg));
        printf("Child received: %s\n", read_msg);
    } else {
        write(fd[1], write_msg, strlen(write_msg)+1);
    }

    return 0;
}
