#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, diskSize, total = 0;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int req[n];
    printf("Enter request sequence:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &diskSize);

    // Sort requests
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            if (req[i] > req[j]) {
                int temp = req[i];
                req[i] = req[j];
                req[j] = temp;
            }
        }
    }

    int i;
    for (i = 0; i < n; i++)
        if (req[i] > head)
            break;

    total += abs(head - req[i - 1]);
    total += abs(req[i - 1] - 0);
    total += abs(0 - req[n - 1]);

    printf("Total head movement = %d\n", total);

    return 0;
}
