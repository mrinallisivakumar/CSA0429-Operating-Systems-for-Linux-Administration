#include <stdio.h>

int main() {
    int pages[50], frames[10];
    int n, f, pageFaults = 0;
    int index = 0, found;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &pages[i]);
    }

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames
    for(int i = 0; i < f; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\n");

    for(int i = 0; i < n; i++) {
        found = 0;

        // Check if page already exists
        for(int j = 0; j < f; j++) {
            if(frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        // If page fault
        if(!found) {
            frames[index] = pages[i];
            index = (index + 1) % f;
            pageFaults++;
        }

        // Display frames
        printf("%d\t", pages[i]);
        for(int j = 0; j < f; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
