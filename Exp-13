#include <stdio.h>

int findLRU(int time[], int n) {
    int min = time[0], pos = 0;
    for(int i = 1; i < n; i++) {
        if(time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

int main() {
    int pages[50], frames[10], time[10];
    int n, f, pageFaults = 0, counter = 0, found, pos;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames and time
    for(int i = 0; i < f; i++) {
        frames[i] = -1;
        time[i] = 0;
    }

    printf("\nPage\tFrames\n");

    for(int i = 0; i < n; i++) {
        found = 0;

        // Check if page is already in frame
        for(int j = 0; j < f; j++) {
            if(frames[j] == pages[i]) {
                found = 1;
                counter++;
                time[j] = counter;
                break;
            }
        }

        // If page fault
        if(!found) {
            pos = -1;

            // Find empty frame
            for(int j = 0; j < f; j++) {
                if(frames[j] == -1) {
                    pos = j;
                    break;
                }
            }

            // Replace LRU page if no empty frame
            if(pos == -1)
                pos = findLRU(time, f);

            frames[pos] = pages[i];
            counter++;
            time[pos] = counter;
            pageFaults++;
        }

        // Display frames
        printf("%d\t", pages[i]);
        for(int j = 0; j < f; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
