#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char filename[50], word[50], line[256];

    printf("Enter file name: ");
    scanf("%s", filename);

    printf("Enter word to search: ");
    scanf("%s", word);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        perror("File open failed");
        return 1;
    }

    printf("\nMatching lines:\n");
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, word)) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
